<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-126098967-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-126098967-1');
	</script>

	<title>@ViewBag.Title</title>
	@Scripts.Render("~/bundles/jquery")
	@Styles.Render("~/bundles/bootstrap")
	@Styles.Render("~/bundles/css")
	@Styles.Render("~/bundles/font-awesome.css")
	<link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
</head>
<body>
	<header class="row header">
		<div class="col-1"></div>
		<div class="col-10 text-center">
			@Html.Partial("_Header")
		</div>
		<div class="col-auto"></div>
	</header>
	<div class="content-container row">
		<div class="col-sm-2"></div>
		<div class="content-holder col-sm-8 col-12">
			<div class="content-render">
				@RenderBody()
			</div>
		</div>
	</div>


	<footer class="row text-center">
		@Html.Partial("_Footer")

	</footer>
	@Scripts.Render("~/bundles/bootstrapjs")
	@Scripts.Render("~/bundles/popperjs")
	@Scripts.Render("~/bundles/homejs")
	@Scripts.Render("~/bundles/modernizr")
	@RenderSection("pagescripts", required: false)
</body>
</html>
